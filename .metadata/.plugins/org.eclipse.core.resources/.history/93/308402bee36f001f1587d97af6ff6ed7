		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public boolean update(Precure precure) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean deleteById(int id) {
		// TODO Auto-generated method stub
		return false;
	}
	
}
